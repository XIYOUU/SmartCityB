<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:id="@+id/iv_new_sort_list_pic"
            android:layout_width="120dp"
            android:layout_height="80dp"
            ></ImageView>
        <TextView
            android:id="@+id/tv_new_sort_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_new_sort_list_pic"
            android:maxLines="1"
            android:ellipsize="end"
            ></TextView>
        <TextView
            android:id="@+id/tv_new_sort_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_new_sort_list_pic"
            android:layout_below="@+id/tv_new_sort_list_title"
            android:maxLines="1"
            android:ellipsize="end"
            ></TextView>
        <TextView
            android:id="@+id/tv_new_sort_list_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_new_sort_list_pic"
            android:layout_below="@+id/tv_new_sort_list_content"
            ></TextView>
        <TextView
            android:id="@+id/tv_new_sort_list_public_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_new_sort_list_pic"
            android:layout_below="@+id/tv_new_sort_list_comment"
            ></TextView>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FindWork.ResumeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8AC8FA"
        app:title="个人简历"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textSize="25dp"
            ></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_email"
                android:layout_below="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮件："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_below="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话号码："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_sex"
                android:layout_below="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textSize="25dp"
                ></TextView>
            <ImageView
                android:id="@+id/tv_pic"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:text="头像："
                android:src="@drawable/ic_home_black_24dp"
                android:layout_alignParentRight="true"></ImageView>

            <EditText
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_alignBottom="@+id/tv_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_alignBottom="@+id/tv_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_alignBottom="@+id/tv_sex"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="求职信息"
            android:textSize="25dp"
            ></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作经验："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_mostEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_experience"
                android:text="最高学历："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_address"
                android:layout_below="@+id/tv_mostEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现居住址："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_positionId"
                android:layout_below="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期望职位："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_money"
                android:layout_below="@+id/tv_positionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪资："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_individualResume"
                android:layout_below="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自我描述："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_education"
                android:layout_below="@+id/tv_individualResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教育经历："
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_experience1"
                android:layout_below="@+id/tv_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作经历："
                android:textSize="25dp"
                ></TextView>

            <EditText
                android:id="@+id/tv_experience_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:id="@+id/tv_mostEducation_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_experience"
                ></EditText>
            <EditText
                android:id="@+id/tv_address_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_below="@+id/tv_mostEducation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:id="@+id/tv_positionId_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_below="@+id/tv_address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:id="@+id/tv_money_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_below="@+id/tv_positionId"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:id="@+id/tv_individualResume_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_below="@+id/tv_money"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:id="@+id/tv_education_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_below="@+id/tv_individualResume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
            <EditText
                android:id="@+id/tv_experience1_show"
                android:layout_toRightOf="@+id/tv_experience"
                android:layout_below="@+id/tv_education"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                ></EditText>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
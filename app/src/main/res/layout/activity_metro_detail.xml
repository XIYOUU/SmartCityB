<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".city.MetroDetailActivity">

    <RelativeLayout
        android:background="#61AEEC"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/quit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            ></ImageView>
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="城市地铁"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/quit"
            ></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="始发站"
            android:textSize="40dp"
            ></TextView>
        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终点站"
            android:textSize="40dp"
            ></TextView>
        <TextView
            android:id="@+id/startTime_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余时间"
            android:background="#DF6161"
            android:textSize="30dp"
            ></TextView>
        <TextView
            android:id="@+id/stationsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站数"
            android:background="#F4E240"
            android:textSize="30dp"
            ></TextView>
        <TextView
            android:id="@+id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余距离"
            android:background="#95E636"
            android:textSize="30dp"
            ></TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>